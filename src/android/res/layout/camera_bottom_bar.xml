<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/bottom_bar_height"
    android:layout_alignParentBottom="true"
    android:background="@color/transparent_background"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearlayou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/linearlayou_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="70dp" >

                <TextView
                    android:id="@+id/eyeleft_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/eye_left"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/text_size_20" />

                <TextView
                    android:id="@+id/eyeright_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/eye_right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/photos_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/linearlayou"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/photos_iv" />

        <com.terrydr.eyeScope.FilterImageView
            android:id="@+id/btn_thumbnail"
            android:layout_width="@dimen/thumbnail_imageview_size"
            android:layout_height="@dimen/thumbnail_imageview_size"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:padding="0.5dip"
            android:scaleType="centerCrop" />
    </RelativeLayout>

</LinearLayout>